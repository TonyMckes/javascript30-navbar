---
import logo from '../assets/Logo.svg'
import Dropdown from './Dropdown.astro'
import Link from './Link.astro'

const navLinks = ['Challenges', 'Resources', 'Other Links']
---

<header class='top-navbar container'>
  <a href='/' class='link-logo'>
    <img src={logo} alt='Ondeck Logo' />
  </a>

  <nav class='nav-links'>
    <ul>
      <Dropdown />
      {
        navLinks.map((value) => (
          <li>
            <Link>{value}</Link>
          </li>
        ))
      }
    </ul>
  </nav>

  <div class='call-to-action'>
    <Link>Sign in</Link>
    <Link secondary>Try for free</Link>
  </div>
</header>

<style>
  .top-navbar {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding-top: 1.5rem !important;
  }
  .link-logo {
    padding: 1rem 0;
    text-decoration: none;
    border-radius: 0.25rem;
    display: inline-block;
  }
  .link-logo > img {
    display: block;
  }
  .nav-links {
    display: flex;
  }
  .nav-links ul {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    gap: 0.75rem;
  }
  .nav-links ul li:not(button) {
    display: none;
  }
  .call-to-action {
    display: none;
  }

  @media (min-width: 768px) {
    .nav-links ul li {
      display: unset !important;
    }
  }
  @media (min-width: 1024px) {
    .top-navbar {
      padding: 1.5rem 0 !important;
    }
    button {
      display: none;
    }
    .nav-links {
      display: flex;
    }

    .call-to-action {
      display: block;
    }
  }
</style>
